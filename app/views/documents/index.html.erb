<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Documents" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Documents</h1>
    <%= link_to "New document", new_document_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="chats" class="min-w-full">
    <ul class="ml-5">
      <% @documents.each do |document| %>
        <li class="list-disc my-4">
          <%= link_to document, class: "font-medium" do %>
            <span class="underline"><%= document.title %></span> <span class="rounded-full bg-green-100 px-2.5 py-0.5 text-sm font-medium text-green-800"><%= t(:embeddings, count: document.embeddings.count) %></span>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
